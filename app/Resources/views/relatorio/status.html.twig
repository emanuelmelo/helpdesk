{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Relatório
            <small>Gerar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active">Relatório</li>
            <li class="active">Chamados por Status</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="title">Chamados por Status</h4>
                    </div>

                    <div class="panel-body">
                        <form action="" method="post">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="status">Status:</label>
                                    <select id="status" name="status" class="form-control">
                                        <option value="0">Todas os Status</option>
                                        {% for status in status %}
                                            <option value="{{ status.id }}">{{ status.nome }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Periodo:</label>

                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" name="daterange" required>
                                    </div>
                                    <!-- /.input group -->
                                </div>
                                <button type="submit" class="btn btn-success">Emitir Relatório</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        var $datePicker = $('input[name="daterange"]');

        $datePicker.daterangepicker({
            "opens": 'right',
            "autoApply": true,
            "locale": {
                "format": "DD/MM/YYYY",
            },
            "autoUpdateInput": false,
        }, function(start, end) {
            $datePicker.val(start.format('DD/MM/YYYY') + ' - ' + end.format('DD/MM/YYYY'));
        });
    </script>
{% endblock %}