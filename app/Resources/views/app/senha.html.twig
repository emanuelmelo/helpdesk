{% extends 'base.html.twig' %}

{% block body %}
    <section class="content-header">
        <h1>Perfil
            <small>editar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li class="active"><a href="{{ path('edit_perfil') }}">Perfil</a></li>
            <li class="active">Alterar Senha</li>
        </ol>
    </section>

    <section class="content">

        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="alert{{ type ? ' alert-'~type : '' }} fade in {{ class|default('') }}">
                    <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message|raw }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        <h4 class="title">Alterar Senha</h4>
                    </div>
                    {{ form_start(edit_form, {"attr": {"novalidate": "novalidate"}}) }}
                    <div class="panel-body">
                        {{ form_widget(edit_form) }}
                    </div>
                    <div class="panel-footer">
                        <div class="btn-toolbar" role="toolbar">
                            <a href="{{ path('homepage') }}" class="btn btn-default btn-group" role="group">
                                <i class="fa fa-arrow-left"></i> <span class="hidden-xs">Voltar</span>
                            </a>
                            <button type="submit" class="btn btn-success"
                                    data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Salvando Alterações">
                                <i class="fa fa-pencil"></i> <span class="hidden-xs">Salvar Alterações</span>
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
